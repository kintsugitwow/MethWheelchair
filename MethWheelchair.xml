        <Layers>
            <Layer level="OVERLAY">
                <FontString name="$parent_Text1" font="MethWheelchair_MorpheusFont"
                            text="GET ROTATED" hidden="true">
                    <Anchors>
                        <Anchors point="CENTER"/>
                    </Anchors>
                </FontString>
                <FontString name="$parent_Text2" font="MethWheelchair_MorpheusFont"
                            text="STOOPEED KEYBOARD-TURNER" hidden="true">
                    <Anchors>
                        <Anchors point="TOP" relativeTo="$parent_Text1" relativePoint="BOTTOM">
                            <Offset x="0" y="-8"/>
                        </Anchors>
                    </Anchors>
                </FontString>
            </Layer>

        </Layers>

        <Scripts>
            <OnLoad>
                this.RotationCycleDuration = 0
            </OnLoad>
            <OnUpdate>
                local updateTime = GetTime()

                if (MethWheelchair and MethWheelchair.IsPlayerKeyboardTurning()
                    and MethWheelchair.GetShackleCastTime() ~= 0
                ) then
                    if (this.LastRotationTickTime) then
                        this.RotationCycleDuration = this.RotationCycleDuration + updateTime - this.LastRotationTickTime
                    end

                    this.LastRotationTickTime = updateTime
                else
                    this.LastRotationTickTime = nil
                    this.RotationCycleDuration = 0
                end

                if (this.RotationCycleDuration > 0.2) then
                    local name = this:GetName()
                    local text1 = getglobal(name .. "_Text1")
                    local text2 = getglobal(name .. "_Text2")
                    text1:Show()
                    text2:Show()

                    local r1 = math.abs(math.sin((updateTime) * 2))
                    local g1 = r1 / 6
                    local b1 = 1 - r1 / 2
                    local a1 = 1

                    text1:SetTextColor(r1, g1, b1, a1)

                    local r2 = math.abs(math.sin((updateTime * 2) + 1.57))
                    local g2 = r2 / 6
                    local b2 = 1 - r2 / 2
                    local a2 = 1

                    text2:SetTextColor(r2, g2, b2, a2)
                else
                    local name = this:GetName()
                    local text1 = getglobal(name .. "_Text1")
                    local text2 = getglobal(name .. "_Text2")
                    text1:Hide()
                    text2:Hide()
                end

                if (MethWheelchair and MethWheelchair.GetShackleCastTime() == 0) then
                    this:Hide()
                end
            </OnUpdate>
        </Scripts>

    </Frame>

</Ui>
